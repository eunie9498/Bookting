    <style name="ButtonRadius10">
        <item name="android:textSize">13dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/defaultMarginStart</item>
        <item name="android:layout_marginEnd">@dimen/defaultMarginStart</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/BooktingBottom</item>
    </style>

    <style name="BooktingBottom" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/bottom_to_top</item>
    </style>

</resources>