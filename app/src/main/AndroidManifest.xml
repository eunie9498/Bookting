<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:installLocation="preferExternal"
    package="com.bookting">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookting">
        <activity
            android:name=".view.main.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.start.JoinActivity"
            android:exported="false" />

        <activity android:name=".view.main.NetworkActivity"
            android:exported="false"/>

        <activity android:name=".view.start.LoginActivity"
            android:noHistory="true"
            android:exported="false"/>

        <activity android:name=".view.main.home.HomeActivity"
            android:exported="false"/>

        <activity android:name=".view.main.MainActivity"
            android:exported="false"/>

        <activity android:name=".view.main.best.BestActivity"
            android:exported="false"/>

        <service
            android:name=".FbMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>